<div class="user-forms">
  <h2 class="user-title">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <div class="field form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input-form" %>
      <%= render "devise/shared/error_messages", model: @user, attribute: :name %>
      
    </div>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-form" %>
      <%= render "devise/shared/error_messages", model: @user, attribute: :email %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input-form" %>
      <%= render "devise/shared/error_messages", model: @user, attribute: :password %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-form" %>
      <%= render "devise/shared/error_messages", model: @user, attribute: :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
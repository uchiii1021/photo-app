<div class="page">
  <div class="forms">
    <h2 class="form-title">パスワードを忘れましたか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
        <%= render "devise/shared/error_messages", model: @user, attribute: :email %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードのリセットを行う", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
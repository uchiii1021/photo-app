<div class="page">
  <div class="forms">
    <h2 class="form-title">パスワードの変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-group">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)<br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input-field" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
      </div>

      <div class="actions">
        <%= f.submit "変更する", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
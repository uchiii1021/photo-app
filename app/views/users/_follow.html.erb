<h3 class="follow-title">フォロー  一覧</h3>
<div class="follows">
  <% @user.followings.each do |user| %>
    <div class="follow">
      <%= link_to user_path(user) do %>
        <div class="follow-image">
          <% if user.image? %>
            <%= image_tag user.image.url, class: "follow-image-size" %>
          <% else %>
            <%= image_tag asset_path("default.png"), class: "follow-image-size" %>
          <% end %>
        </div>
      <% end %>
      <div>
        <%= link_to user_path(user) do %>
          <div class="follow-name">
            <%= user.name %>
          </div>
        <% end %>
        <% unless current_user == user %>
          <% if current_user.following?(user) %>
            <%= form_for(current_user.following_relationships.find_by(following_id: user.id), html: { method: :delete }) do |f| %>
              <%= hidden_field_tag :following_id, user.id %>
              <%= f.submit 'フォローを外す', class: 'btn btn-danger user-btn' %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>